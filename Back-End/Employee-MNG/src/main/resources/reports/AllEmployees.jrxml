            <element kind="textField" x="617"  y="0" width="100" height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{employeeGroup}]]></expression></element>
            <element kind="textField" x="717"  y="0" width="100" height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{reportingManager}]]></expression></element>
            <element kind="textField" x="817"  y="0" width="100" height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{department}]]></expression></element>
            <element kind="textField" x="917"  y="0" width="100" height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{status}]]></expression></element>
            <element kind="textField" x="1017" y="0" width="100" height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{relievingDate}]]></expression></element>
            <element kind="textField" x="1117" y="0" width="100" height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{site}]]></expression></element>
            <element kind="textField" x="1217" y="0" width="83"  height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{city}]]></expression></element>
            <element kind="textField" x="1300" y="0" width="80"  height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{state}]]></expression></element>
            <element kind="textField" x="1380" y="0" width="60"  height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{country}]]></expression></element>
            <element kind="textField" x="1440" y="0" width="70"  height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{zipCode}]]></expression></element>

            <!-- Address (null-safe) -->
            <element kind="textField" x="1510" y="0" width="100" height="30"
                     fontSize="9.0" isBlankWhenNull="true" textAdjust="StretchHeight">
                <expression><![CDATA[
                    (($P{addressLine1} != null && !$P{addressLine1}.isEmpty()) ? $P{addressLine1} : "") +
                    (($P{addressLine2} != null && !$P{addressLine2}.isEmpty()) ? " " + $P{addressLine2} : "")
                ]]></expression>
