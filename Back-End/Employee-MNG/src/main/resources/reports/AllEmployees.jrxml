    <!--                   DETAIL BAND                       -->
    <!-- ═══════════════════════════════════════════════════ -->
    <detail>
        <band height="35" splitType="Stretch">

            <!-- Employee ID -->
            <element kind="textField" x="0" y="0" width="72" height="30"
                     fontSize="9.0" isBlankWhenNull="true" textAdjust="StretchHeight">
                <expression><![CDATA[$P{employeeId} != null ? $P{employeeId} : ""]]></expression>
            </element>

            <!-- Full Name (null-safe concatenation) -->
            <element kind="textField" x="72" y="0" width="138" height="30"
                     fontSize="9.0" isBlankWhenNull="true" textAdjust="StretchHeight">
                <expression><![CDATA[
                    (($P{salutation}  != null && !$P{salutation}.isEmpty())  ? $P{salutation}  + " " : "") +
                    (($P{firstName}   != null && !$P{firstName}.isEmpty())   ? $P{firstName}   + " " : "") +
                    (($P{middleName}  != null && !$P{middleName}.isEmpty())  ? $P{middleName}  + " " : "") +
                    (($P{lastName}    != null && !$P{lastName}.isEmpty())    ? $P{lastName}          : "")
                ]]></expression>
            </element>

            <element kind="textField" x="210"  y="0" width="69"  height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{gender}]]></expression></element>
            <element kind="textField" x="279"  y="0" width="69"  height="30" fontSize="9.0" isBlankWhenNull="true"><expression><![CDATA[$P{dob}]]></expression></element>
