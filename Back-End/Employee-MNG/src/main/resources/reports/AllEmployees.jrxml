<?xml version="1.0" encoding="UTF-8"?>
<jasperReport name="AllEmployees"
    language="java"
    pageWidth="1650"
    pageHeight="842"
    columnWidth="1610"
    leftMargin="20"
    rightMargin="20"
    topMargin="20"
    bottomMargin="20"
    ignorePagination="true"
    whenNoDataType="AllSectionsNoDetail"
    uuid="d5495170-9fc8-427d-b523-24beb682fec1">

    <queryString>
        <![CDATA[
        SELECT 
            p.employee_id,
            p.salutation,
            p.first_name,
            p.middle_name,
            p.last_name,
            p.gender,
            p.dob,
            p.mobile,
            pd.email,
            pd.designation,
            pd.employee_group,
            pd.reporting_manager,
            pd.department,
            pd.status,
            pd.relieving_date,
            pd.site,
            a.country,
            a.state,
            a.city,
            a.zip_code,
            a.address_line1,
            a.address_line2
        FROM person p
        LEFT JOIN person_details pd ON p.employee_id = pd.employee_id
        LEFT JOIN address a ON p.employee_id = a.employee_id
        ]]>
    </queryString>

    <!-- FIELDS EXACTLY SAME AS QUERY -->
    <field name="employee_id" class="java.lang.String"/>
    <field name="salutation" class="java.lang.String"/>
    <field name="first_name" class="java.lang.String"/>
    <field name="middle_name" class="java.lang.String"/>
    <field name="last_name" class="java.lang.String"/>
    <field name="gender" class="java.lang.String"/>
    <field name="dob" class="java.sql.Date"/>
    <field name="mobile" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="designation" class="java.lang.String"/>
    <field name="employee_group" class="java.lang.String"/>
    <field name="reporting_manager" class="java.lang.String"/>
    <field name="department" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>
    <field name="relieving_date" class="java.sql.Date"/>
    <field name="site" class="java.lang.String"/>
    <field name="country" class="java.lang.String"/>
    <field name="state" class="java.lang.String"/>
    <field name="city" class="java.lang.String"/>
    <field name="zip_code" class="java.lang.String"/>
    <field name="address_line1" class="java.lang.String"/>
    <field name="address_line2" class="java.lang.String"/>

    <background/>

    <detail>
        <band height="30">

            <textField><reportElement x="0" y="0" width="72" height="20"/><textFieldExpression><![CDATA[$F{employee_id}]]></textFieldExpression></textField>

            <textField>
                <reportElement x="72" y="0" width="138" height="20"/>
                <textFieldExpression><![CDATA[
                    ($F{salutation} != null ? $F{salutation} + " " : "") +
                    ($F{first_name} != null ? $F{first_name} + " " : "") +
                    ($F{middle_name} != null ? $F{middle_name} + " " : "") +
                    ($F{last_name} != null ? $F{last_name} : "")
                ]]></textFieldExpression>
            </textField>

            <textField><reportElement x="210" y="0" width="69" height="20"/><textFieldExpression><![CDATA[$F{gender}]]></textFieldExpression></textField>
            <textField><reportElement x="279" y="0" width="69" height="20"/><textFieldExpression><![CDATA[$F{dob} != null ? $F{dob}.toString() : ""]]></textFieldExpression></textField>
            <textField><reportElement x="348" y="0" width="69" height="20"/><textFieldExpression><![CDATA[$F{mobile}]]></textFieldExpression></textField>
            <textField><reportElement x="417" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{email}]]></textFieldExpression></textField>
            <textField><reportElement x="517" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{designation}]]></textFieldExpression></textField>
            <textField><reportElement x="617" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{employee_group}]]></textFieldExpression></textField>
            <textField><reportElement x="717" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{reporting_manager}]]></textFieldExpression></textField>
            <textField><reportElement x="817" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{department}]]></textFieldExpression></textField>
            <textField><reportElement x="917" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{status}]]></textFieldExpression></textField>
            <textField><reportElement x="1017" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{relieving_date} != null ? $F{relieving_date}.toString() : ""]]></textFieldExpression></textField>
            <textField><reportElement x="1117" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{site}]]></textFieldExpression></textField>
            <textField><reportElement x="1217" y="0" width="83" height="20"/><textFieldExpression><![CDATA[$F{city}]]></textFieldExpression></textField>
            <textField><reportElement x="1300" y="0" width="80" height="20"/><textFieldExpression><![CDATA[$F{state}]]></textFieldExpression></textField>
            <textField><reportElement x="1380" y="0" width="60" height="20"/><textFieldExpression><![CDATA[$F{country}]]></textFieldExpression></textField>
            <textField><reportElement x="1440" y="0" width="70" height="20"/><textFieldExpression><![CDATA[$F{zip_code}]]></textFieldExpression></textField>

            <textField>
                <reportElement x="1510" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[
                    ($F{address_line1} != null ? $F{address_line1} : "") +
                    ($F{address_line2} != null ? " " + $F{address_line2} : "")
                ]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>